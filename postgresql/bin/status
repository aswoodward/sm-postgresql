#!/bin/sh

if [[ "$USER" == "${service_user}" ]]
then
  exec "${service_bin_path}/pg_ctl" status -D "${service_data_path}" -s
else if user is root
  exec /bin/su "${service_user}" \
  -c "${service_bin_path}/pg_ctl status -D '${service_data_path}' -s"
else
  log fail "postgresql status may only be run as either root or ${service_user}"
fi

