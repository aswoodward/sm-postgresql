#!/bin/sh

if [[ "$USER" == "${service_user}" ]]
then
  exec "${service_bin_path}/pg_ctl" reload -D "${service_data_path}"

elif user is root
then
  exec su "${service_user}" \
    -c "${service_bin_path}/pg_ctl reload -D '${service_data_path}'"

else
  log fail "postgresql reload may only be run as either root or ${service_user}"
fi


